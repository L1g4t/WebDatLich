@using WebDatLich.Data
@{
    ViewData["Title"] = "AddTour";
}

@model AddTourViewModel

<h2>Thêm mới</h2>
<form asp-action="AddTour" method="post">
    <div class="form-group">
        <label for="TourName">Tên Tour:</label>
        <input asp-for="TourName" class="form-control" />
        <span asp-validation-for="TourName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Mô tả:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Đơn giá:</label>
        <input asp-for="Price" type="number" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="StartDay">Ngày bắt đầu:</label>
        <input asp-for="StartDay" type="date" class="form-control" />
        <span asp-validation-for="StartDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="EndDay">Ngày kết thúc:</label>
        <input asp-for="EndDay" type="date" class="form-control" />
        <span asp-validation-for="EndDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DestinationId">Địa điểm:</label>
        <select asp-for="DestinationId" class="form-control">
            <option value="0">Chọn địa điểm</option>
            @foreach (var destination in Model.Destinations)
            {
                <option value="@destination.Value">@destination.Text</option>
            }
        </select>
        <span asp-validation-for="DestinationId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm Tour</button>
</form>


