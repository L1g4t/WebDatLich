@using WebDatLich.Data

@{
    ViewData["Title"] = "Index";
}
@model List<Tour>
<!-- Destination Start -->
<div class="container-xxl py-5 destination">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Destination</h6>
            <h1 class="mb-5">Popular Destination</h1>
        </div>
        <div class="row g-3">
            <div class="col-lg-7 col-md-6">
                <div class="row g-3">
                    @foreach(var tour in Model)
                    {
                        <div class="col-lg-12 col-md-12 wow zoomIn" data-wow-delay="0.1s">
                            <a class="position-relative d-block overflow-hidden" href="">
                                <a asp-controller="Checkout" asp-action="Index" asp-route-id="@tour.TourId">
                                    <!-- Hiển thị tên tour -->
                                    <h5 class="mb-0">@tour.TourName</h5>

                                    <!-- Hiển thị mô tả tour -->
                                    <p><strong>Description:</strong> @tour.Description</p>

                                    <!-- Hiển thị TÊN địa điểm -->
                                    <p><strong>Location:</strong> @tour.Destination.DestinationName</p>

                                    <!-- Hiển thị Ngày bắt đầu và ngày kết thúc -->
                                    <p><strong>Start Date:</strong> @tour.StartDay</p>
                                    <p><strong>End Date:</strong> @tour.EndDay</p>

                                    <!-- Hiển thị giá -->
                                    <p><strong>Price:</strong> @tour.Price.ToString("C")</p>
                                </a>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Destination Start -->

