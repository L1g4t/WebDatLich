@using WebDatLich.Models;
@model LoginViewModel;
@{
	ViewData["Title"] = "Login";
}

<div class="account-container">
	<div class="account-box">
			<h2 class="text-center mb-4">Login</h2>
		@if (TempData["LoginRequired"] != null)
		{
			<div class="alert alert-warning" role="alert">
				@TempData["LoginRequired"]
			</div>
		}
			<form asp-action="Login" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="mb-3">
					<label asp-for="Username" class="form-label"></label>
					<input asp-for="Username" class="form-control">	
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Password" class="form-label"></label>
					<input asp-for="Password" class="form-control">
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-check mb-3">
					<input asp-for="RememberMe" class="form-check-input" type="checkbox" id="RememberMe" />
					<label class="form-check-label" for="RememberMe">
						@Html.DisplayNameFor(a=>a.RememberMe)
					</label>
				</div>
				<input type="submit" value="Login" class="btn btn-success w-100 p-2"/>
				<p class="text-center mt-2">
					Chưa đăng ký? <a asp-controller="Account" asp-action="Register" classaction="text-decoration-none">Đăng ký</a>
				</p>
				<div class="text-center">
					<a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Quay lại</a>
				</div>
			</form>
	</div>
</div>
