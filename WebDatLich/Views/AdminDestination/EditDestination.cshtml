@using WebDatLich.Data
@{
    ViewData["Title"] = "EditDestination";
}

@model AdminDestinationViewModel

<h2>Sửa</h2>
<form asp-action="EditDestination" method="post">
    <input type="hidden" asp-for="DestinationId" />
    <div class="form-group">
        <label for="DestinationName">Tên địa điểm:</label>
        <input asp-for="DestinationName" type="text" class="form-control" />
        <span asp-validation-for="DestinationName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Mô tả:</label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>

