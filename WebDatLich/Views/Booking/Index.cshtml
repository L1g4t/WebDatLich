@using WebDatLich.Data
@model List<Booking>

@{
    ViewData["Title"] = "Index";
}
<!-- Booking start -->

<div class="container-xxl py-5 destination">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Your Booking</h6>
            <div class="row g-3">
                @foreach (var bookingList in Model)
                        {
                            <div class="col-lg-12 col-md-12 wow zoomIn" data-wow-delay="0.1s">
                                <a class="position-relative d-block overflow-hidden" href="">
                                    <!-- Hiển thị tên tour mà ngươi dùng đã đặt -->
                                    <h5 class="mb-0">@bookingList.Tour.TourName</h5>

                                    <!-- Hiển thị ngày người dùng đặt -->
                                    <p><strong>Ngày đặt:</strong> @bookingList.BookingDate</p>

                                    <!-- Hiển thị TÊN địa điểm người dùng đã -->
                                    <p><strong>Location:</strong> @bookingList.Tour.Destination.DestinationName</p>

                                    <!-- Hiển thị Ngày bắt đầu và ngày kết thúc -->
                                    <p><strong>Start Date:</strong> @bookingList.Tour.StartDay</p>
                                    <p><strong>End Date:</strong> @bookingList.Tour.EndDay</p>

                                    <!-- Hiển thị giá của tour -->
                                    <p><strong>Price:</strong> @bookingList.Tour.Price.ToString("C")</p>

                                    <!-- Hiển thị Ngày bắt đầu và ngày kết thúc -->
                                    <p><strong>Trạng thái:</strong> @bookingList.Status</p>

                                </a>
                            </div>
                        }
            </div>
        </div>
    </div>
</div>

<!-- Booking end -->

