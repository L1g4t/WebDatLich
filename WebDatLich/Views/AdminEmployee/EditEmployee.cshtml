@using WebDatLich.Data
@{
    ViewData["Title"] = "EditEmployee";
}

@model AdminEmployeeViewModel

<h2>Sửa</h2>
<form asp-action="EditEmployee" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="form-group">
        <label for="FullName">Tên đầy đủ:</label>
        <input asp-for="FullName" type="text" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Position">Chức vụ:</label>
        <select asp-for="Position" class="form-control">
            <option value="Tour Guide">Tour Guide</option>
            <option value="Manager">Manager</option>
        </select>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HireDate">Ngày vào làm:</label>
        <input asp-for="HireDate" type="date" class="form-control" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Số điện thoại:</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <!-- Các trường nhập liệu cho TourGuide chỉ hiển thị khi chức vụ là "Tour Guide" -->
    <div id="tourGuideFields" style="@(Model.Position == "Tour Guide" ? "display:block;" : "display:none;")">
        <div class="form-group">
            <label for="TourGuideExperience">Kinh nghiệm:</label>
            <input asp-for="TourGuideExperience" type="number" class="form-control" />
            <span asp-validation-for="TourGuideExperience" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TourGuideLanguages">Ngôn ngữ sử dụng:</label>
            <input asp-for="TourGuideLanguages" type="text" class="form-control" />
            <span asp-validation-for="TourGuideLanguages" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
<script>
    // Hiển thị các trường TourGuide khi chức vụ là Tour Guide
    document.querySelector('select[name="Position"]').addEventListener('change', function () {
        var tourGuideFields = document.getElementById('tourGuideFields');
        if (this.value === 'Tour Guide') {
            tourGuideFields.style.display = 'block';
        } else {
            tourGuideFields.style.display = 'none';
        }
    });
</script>

