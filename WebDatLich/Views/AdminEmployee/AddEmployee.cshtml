@using WebDatLich.Data
@{
    ViewData["Title"] = "AddEmployee";
}

@model AdminEmployeeViewModel

<h2>Thêm</h2>
<form asp-action="AddEmployee" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="form-group">
        <label for="FullName">Tên đầy đủ:</label>
        <input asp-for="FullName" type="text" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Position">Chức vụ:</label>
        <select asp-for="Position" class="form-control">
            <option value="Tour Guide">Tour Guide</option>
            <option value="Manager">Manager</option>
        </select>
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HireDate">Ngày vào làm:</label>
        <input asp-for="HireDate" type="date" class="form-control" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Số điện thoại:</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm nhân viên</button>
</form>


